{
    "name": "app-insights-php/monolog-handler",
    "description": "Microsoft App Insights monolog handler",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Norbert Orzechowicz",
            "email": "norbert@orzechowicz.pl"
        }
    ],
    "repositories": [
	    {
		    "type": "vcs",
		    "url": "https://github.com/meidlinga/client"
	    }
    ],
    "autoload": {
        "psr-4": {
            "AppInsightsPHP\\Monolog\\": "src/AppInsightsPHP/Monolog/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppInsightsPHP\\Monolog\\Tests\\": "tests/AppInsightsPHP/Monolog/Tests/"
        }
    },
    "require": {
        "monolog/monolog": "^1.25",
        "app-insights-php/client": "1.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "phpunit": [
            "phpunit --colors=always"
        ],
        "static:analyze": [
            "php-cs-fixer fix --dry-run"
        ],
        "test" : [
            "@phpunit"
        ],
        "cs:php:fix": [
            "php-cs-fixer fix"
        ]
    }
}
